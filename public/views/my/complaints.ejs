<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <title>나의 민원</title>
  <link rel="stylesheet" href="/css/mypages.css" />
  <link rel="stylesheet" href="/css/header.css">
</head>
<body>
  <%- include("../partials/header") %>

  <main class="wrap">
    <h1 class="title">나의 민원</h1>

    <% if (!complaints || complaints.length === 0) { %>
      <div class="empty">작성한 민원이 없습니다.</div>
    <% } else { %>
      <div class="grid">
        <% complaints.forEach(function(c){ %>
          <a class="cardBtn" href="/my/inquiry/<%= c.id %>">
            <div class="topRow">
              <div class="badge"><span class="badgeDot"></span> 민원 #<%= c.id %></div>
              <div class="meta"><%= formatKST(c.created) %></div>
            </div>
            <div class="preview">
              <%= (c.content || "").slice(0, 70) %><%= (c.content || "").length > 70 ? "..." : "" %>
            </div>
          </a>
        <% }) %>
      </div>
    <% } %>
  </main>
</body>
</html>
