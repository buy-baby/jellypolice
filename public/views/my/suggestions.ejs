<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <title>나의 건의</title>
  <link rel="stylesheet" href="/css/mypages.css" />
  <link rel="stylesheet" href="/css/header">
</head>
<body>
  <%- include("../partials/header") %>

  <main class="wrap">
    <h1 class="title">나의 건의</h1>

    <% if (!suggestions || suggestions.length === 0) { %>
      <div class="empty">작성한 건의가 없습니다.</div>
    <% } else { %>
      <div class="grid">
        <% suggestions.forEach(function(s){ %>
          <a class="cardBtn" href="/my/suggest/<%= s.id %>">
            <div class="topRow">
              <div class="badge"><span class="badgeDot"></span> 건의 #<%= s.id %></div>
              <div class="meta"><%= formatKST(s.created) %></div>
            </div>
            <div class="preview">
              <%= (s.content || "").slice(0, 70) %><%= (s.content || "").length > 70 ? "..." : "" %>
            </div>
          </a>
        <% }) %>
      </div>
    <% } %>
  </main>
</body>
</html>
