<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>젤리 경찰청</title>

  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: #eef2f9;
    }

    /* 상단바 */
    .topbar {
      width: 100%;
      background: #0b3fa7;
      color: white;
      padding: 14px 30px;
      font-size: 22px;
      font-weight: bold;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .topbar img {
      height: 32px;
    }

    /* 메뉴 영역 */
    .menu {
      width: 100%;
      background: #1a4bd9;
      display: flex;
      justify-content: center;
      gap: 80px;
      padding: 12px 0;
      position: relative;
    }

    .menu-item {
      color: white;
      font-size: 18px;
      font-weight: bold;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 6px;
      user-select: none;
    }

    /* ▼ / ▲ 아이콘 */
    .arrow {
      transition: transform 0.25s;
    }

    .arrow.open {
      transform: rotate(180deg);
    }

    /* 드롭다운 영역 */
    .dropdown {
      width: 100%;
      background: #1a4bd9;
      position: absolute;
      left: 0;
      top: 100%;
      display: none; /* 기본은 숨김 */
      padding: 20px 0;
      animation: slideDown 0.28s ease forwards;
    }

    /* 드롭다운 항목들 */
    .dropdown-content {
      display: flex;
      justify-content: center;
      gap: 120px;
      color: white;
      font-size: 17px;
      text-align: center;
    }

    .dropdown-content a {
      color: white;
      text-decoration: none;
      display: block;
      margin-top: 6px;
      transition: 0.2s;
    }
    .dropdown-content a:hover {
      text-decoration: underline;
      filter: brightness(1.15);
    }

    /* 애니메이션 */
    @keyframes slideDown {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>

<body>

  <!-- 상단 타이틀 -->
  <div class="topbar">
    <img src="/logo2.png" alt="로고">
    젤리 경찰청
  </div>

  <!-- 메뉴 영역 -->
  <div class="menu">
    <div class="menu-item" onclick="toggleDropdown('sogae')">
      소개 <span id="arrow-sogae" class="arrow">▼</span>
    </div>

    <div class="menu-item" onclick="toggleDropdown('job')">
      채용공고 <span id="arrow-job" class="arrow">▼</span>
    </div>

    <div class="menu-item" onclick="toggleDropdown('cs')">
      고객센터 <span id="arrow-cs" class="arrow">▼</span>
    </div>
  </div>

  <!-- 드롭다운 1 : 소개 -->
  <div id="drop-sogae" class="dropdown">
    <div class="dropdown-content">
      <div>
        <a href="/police">경찰청 소개</a>
      </div>
      <div>
        <a href="/rank">직급표</a>
      </div>
      <div>
        <a href="/depart">부서 소개</a>
      </div>
    </div>
  </div>

  <!-- 드롭다운 2 : 채용공고 -->
  <div id="drop-job" class="dropdown">
    <div class="dropdown-content">
      <div><a href="/apply">지원 자격</a></div>
      <div><a href="/applyform">지원서</a></div>
    </div>
  </div>

  <!-- 드롭다운 3 : 고객센터 -->
  <div id="drop-cs" class="dropdown">
    <div class="dropdown-content">
      <div><a href="/inquiry">민원실</a></div>
      <div><a href="/suggest">건의실</a></div>
    </div>
  </div>

  <script>
    function toggleDropdown(target) {
      const ids = ["sogae", "job", "cs"];

      ids.forEach(id => {
        const drop = document.getElementById("drop-" + id);
        const arrow = document.getElementById("arrow-" + id);

        if (id === target) {
          const isOpen = drop.style.display === "block";
          drop.style.display = isOpen ? "none" : "block";
          arrow.classList.toggle("open", !isOpen);
        } else {
          drop.style.display = "none";
          arrow.classList.remove("open");
        }
      });
    }
  </script>

</body>
</html>
