<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title><%= data.title %></title>
  <link rel="stylesheet" href="/css/intro.css">
  <link rel="stylesheet" href="/css/header.css">
</head>
<body>
  <%- include("../partials/header") %>

  <div class="intro-container">
    <h1 class="page-title"><%= data.title %></h1>

    <% 
      const logoMap = {
        "인사팀": "/images/departments/hr.png",
        "감사팀": "/images/departments/audit.png",
        "특수 검거 기동대(SCP)": "/images/departments/scp.png",
        "특공대(SOU)": "/images/departments/sou.png",
        "항공팀(ASU)": "/images/departments/asu.png",
      };
    %>

    <% data.teams.forEach(t => { 
      const logoSrc = (t.logo && String(t.logo).trim()) || logoMap[t.name] || "/images/departments/default.png";
    %>
      <div class="dept-box">
        <img
          class="dept-logo"
          src="<%= logoSrc %>"
          alt="<%= t.name %> 로고"
          onerror="this.onerror=null;this.src='/images/departments/default.png';"
        />
        <div class="dept-title"><%= t.name %></div>
        <div class="dept-text"><%= (t.desc || t.description || "") %></div>
      </div>
    <% }) %>
  </div>

</body>
</html>
