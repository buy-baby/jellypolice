<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title><%= data.title %></title>
  <link rel="stylesheet" href="/css/intro.css">
</head>
<body>

<div class="intro-container">
  <h1 class="page-title"><%= data.title %></h1>

  <% data.groups.forEach(group => { %>

    <div class="rank-section">
      <h2 class="rank-title <%= group.color %>"><%= group.name %></h2>

      <% if (group.type === "simple") { %>

        <% group.ranks.forEach(r => { %>
          <div class="rank-card">
            <strong><%= r.title %></strong>
            <div><%= r.people || "─" %></div>
          </div>
        <% }) %>

      <% } else { %>

        <% group.ranks.forEach(r => { %>
          <div class="rank-card">
            <h3><%= r.title %></h3>

            <% r.grades.forEach(g => { %>
              <div class="info-box">
                <strong><%= g.label %></strong>
                <div><%= g.people || "─" %></div>
              </div>
            <% }) %>

          </div>
        <% }) %>

      <% } %>
    </div>

  <% }) %>
</div>

</body>
</html>
