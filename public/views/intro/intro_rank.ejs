<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title><%= data.title %></title>
  <link rel="stylesheet" href="/css/intro.css">
</head>
<body>

<div class="intro-container">
  <h1 class="page-title"><%= data.title %></h1>

  <div class="rank-section">
    <div class="rank-title high">고위직</div>
    <% data.high.forEach(r => { %>
      <div class="rank-card"><%= r %></div>
    <% }) %>
  </div>

  <div class="rank-section">
    <div class="rank-title mid">간부직</div>
    <% data.mid.forEach(r => { %>
      <div class="rank-card"><%= r %></div>
    <% }) %>
  </div>

  <div class="rank-section">
    <div class="rank-title normal">일반직</div>

    <% Object.keys(data.normal).forEach(rank => { %>
      <div class="rank-card">
        <strong><%= rank %></strong>
        <ul>
          <% data.normal[rank].forEach(n => { %>
            <li><%= n %></li>
          <% }) %>
        </ul>
      </div>
    <% }) %>
  </div>

  <div class="rank-section">
    <div class="rank-title normal">시보</div>
    <% data.probation.forEach(p => { %>
      <div class="rank-card"><%= p %></div>
    <% }) %>
  </div>

</div>
</body>
</html>
