<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title><%= data.title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/intro.css">
</head>
<body>

<div class="intro-container">
  <h2 class="page-title"><%= data.title %></h2>

  <% data.ranks.forEach(section => { %>

    <% if (section.group !== "일반직") { %>
      <div class="rank-section">
        <h3 class="rank-title"><%= section.group %></h3>
        <% section.items.forEach(item => { %>
          <div class="rank-card"><%= item %></div>
        <% }) %>
      </div>
    <% } else { %>

      <div class="rank-section">
        <h3 class="rank-title normal">일반직</h3>

        <% section.levels.forEach(level => { %>
          <div class="rank-large-box">
            <div class="rank-subtitle"><%= level.rank %></div>

            <div class="rank-grade-grid">
              <% level.grades.forEach(g => { %>
                <div class="rank-small-box"><%= g %></div>
              <% }) %>
            </div>
          </div>
        <% }) %>

      </div>

    <% } %>

  <% }) %>
</div>

</body>
</html>
