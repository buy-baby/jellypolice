<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= data?.title || "젤리 경찰청 채용 안내" %></title>
  <link rel="stylesheet" href="/css/apply_conditions.css" />
</head>
<body>
  <%- include("../partials/header") %>

  <div class="apply-wrap">
    <div class="apply-top">
      <div class="apply-top-title"><%= data?.title || "젤리 경찰청 채용 안내" %></div>

      <a class="apply-top-btn" href="https://forms.gle/egNfcMarbPBKYaS37" target="_blank" rel="noopener">
        지원서 작성
      </a>
    </div>

    <!-- 3칸 영역 -->
    <div class="apply-grid">
      <!--지원 자격 안내-->
      <section class="apply-col">
        <div class="pill pill-green">
          <%= data?.cards?.eligibility?.title || "지원 자격 안내" %>
        </div>
        <div class="apply-content">
          <%
            const eligibilityLines = (data?.cards?.eligibility?.content || "")
              .replace(/<br\s*\/?>/gi, "\n")
              .split(/\r?\n/)
              .map(s => s.trim())
              .filter(Boolean);
          %>

          <ul class="apply-list">
            <% eligibilityLines.forEach(line => { %>
              <li><%= line %></li>
            <% }) %>
          </ul>

        </div>
      </section>

      <div class="divider"></div>

      <!--지원 불가 사유-->
      <section class="apply-col">
        <div class="pill pill-red">
          <%= data?.cards?.disqualify?.title || "지원 불가 사유" %>
        </div>
        <div class="apply-content">
          <%
            const eligibilityLines = (data?.cards?.eligibility?.content || "")
              .replace(/<br\s*\/?>/gi, "\n")      // 혹시 <br> 섞여있으면 줄바꿈으로 변환
              .split(/\r?\n/)                     // 줄 단위로 나누기
              .map(s => s.trim())
              .filter(Boolean);
          %>

          <ul class="apply-list">
            <% eligibilityLines.forEach(line => { %>
              <li><%= line %></li>
            <% }) %>
          </ul>

        </div>
      </section>

      <div class="divider"></div>

      <!--지원 우대 사항-->
      <section class="apply-col">
        <div class="pill pill-yellow">
          <%= data?.cards?.preference?.title || "지원 우대 사항" %>
        </div>
        <div class="apply-content">
          <%
            const eligibilityLines = (data?.cards?.eligibility?.content || "")
              .replace(/<br\s*\/?>/gi, "\n")      // 혹시 <br> 섞여있으면 줄바꿈으로 변환
              .split(/\r?\n/)                     // 줄 단위로 나누기
              .map(s => s.trim())
              .filter(Boolean);
          %>
                  
          <ul class="apply-list">
            <% eligibilityLines.forEach(line => { %>
              <li><%= line %></li>
            <% }) %>
          </ul>
          
        </div>
      </section>
    </div>
  </div>
</body>
</html>
